smart_borders on
smart_gaps on

# Audio
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer sset Master 5%+
bindsym XF86AudioLowerVolume exec --no-startup-id amixer sset Master 5%-
bindsym XF86AudioMute exec --no-startup-id amixer sset Master 1+ toggle

# Screen brightness
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 10
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10

# Keyboard backlight
bindsym XF86KbdBrightnessUp exec --no-startup-id ~/.config/i3/kbdbacklight up 
bindsym XF86KbdBrightnessDown exec --no-startup-id ~/.config/i3/kbdbacklight down

