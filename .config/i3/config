#}

bar {
	font pango:FuraMono Nerd Font Mono 12
	position top
	status_command /usr/bin/i3status-rs ~/.config/i3/i3status-rs.toml
	colors {
                #separator $color7
                background $color0
                #statusline $color8
                focused_workspace $color6 $color10
                active_workspace $color6 $color10
                inactive_workspace $color6 $color3
                urgent_workspace $color6 $color11
        }
}

